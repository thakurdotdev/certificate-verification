            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{studentToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "John Doe",
                  "type": "text"
                },
                {
                  "key": "title",
                  "value": "AWS Solutions Architect",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Professional certification for AWS cloud architecture",
                  "type": "text"
                },
                {
                  "key": "subjectDate",
                  "value": "2024-01-15",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/certificates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "certificates"]
            },
            "description": "Student uploads certificate with file. Auto-saves certificateId. (STUDENT only)\n\nüìé Select a PDF/JPG/PNG file in the 'file' field."
          }
        },
        {
          "name": "Step 7: Faculty Views Pending Certificates",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{facultyToken}}",
                  "type": "string"
