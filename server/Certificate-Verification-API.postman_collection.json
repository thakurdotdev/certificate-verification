            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/certificates/pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "certificates", "pending"]
            },
            "description": "Faculty sees pending certificates from students in their department. (FACULTY only)"
          }
        },
        {
          "name": "Step 8: Faculty Approves Certificate",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{facultyToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"APPROVED\",\n  \"remarks\": \"Certificate verified and approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/certificates/{{certificateId}}/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "certificates", "{{certificateId}}", "verify"]
            },
            "description": "Faculty approves the uploaded certificate. Uses saved certificateId. (FACULTY only)"
          }
        }
      ]
